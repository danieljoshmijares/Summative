<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3399FF" /> <!-- Darker blue for pressed state -->
            <stroke android:width="2dp" android:color="#3399FF" /> <!-- Darker stroke color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#3399FF" /> <!-- Darker blue for normal state -->
            <stroke android:width="2dp" android:color="#3399FF" /> <!-- Slightly lighter stroke color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
