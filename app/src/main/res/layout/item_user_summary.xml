<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/phonebg"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvEmployeeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee ID"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvLoanType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Type"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvLoanAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Amount"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvMonthsToPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Months to Pay"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvServiceCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Charge"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvMonthlyAmortization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Amortization"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvTotalAmountPayable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount Payable"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvLoanStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Status"
        android:textSize="16sp"
        android:fontFamily="times"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

</LinearLayout>
