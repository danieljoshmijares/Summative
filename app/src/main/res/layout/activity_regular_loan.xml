<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phonebg"
    android:orientation="vertical"
    tools:context=".RegularLoan">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:fontFamily="times"
        android:text="Regular Loan"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/basicsal"
        android:padding="10dp"
        android:background="#3F4876"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:fontFamily="times"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textColorHint="#FFFFFF"
        android:inputType="numberDecimal"
        android:hint="Basic Salary"/>
    <EditText
        android:id="@+id/months"
        android:padding="10dp"
        android:background="#3F4876"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:fontFamily="times"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textColorHint="#FFFFFF"
        android:inputType="number"
        android:hint="Number of Months to Pay"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginTop="10dp"
        android:fontFamily="times"
        android:text="Max months: 24 (2 years)"
        android:textColor="#FDFDFD"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:backgroundTint="#495385"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="times"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textAlignment="gravity"
        android:text="Apply for Approval"
        android:textStyle="bold"
        android:textSize="30sp"/>
</LinearLayout>