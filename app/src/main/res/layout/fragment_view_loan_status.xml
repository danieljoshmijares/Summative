<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phonebg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvLoanType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Type: "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Amount: "
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMonthsToPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Months to Pay: "
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvServiceCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Charge: "
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest: "
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMonthlyAmortization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Amortization: "
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTotalAmountPayable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount Payable: "
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvLoanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Status: "
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:fontFamily="times"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:fontFamily="times"
            android:text="Back to Home Page"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
